# MongoDB Configuration
# MongoDB Configuration
# For local MongoDB (no authentication)
MONGODB_URI=mongodb://localhost:27017/linkedin-dashboard

# For local MongoDB with authentication - uncomment and replace with your details
# MONGODB_URI=mongodb://username:password@localhost:27017/linkedin-dashboard?authSource=admin

# For MongoDB Atlas (cloud) - uncomment and replace with your details
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/linkedin-dashboard?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration (for development)
FRONTEND_URL=http://localhost:8080

# Cookie Configuration
COOKIE_SECRET=your-cookie-secret-key-change-this-in-production

# Optional: MongoDB Atlas (for production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/linkedin-dashboard

# Redis Configuration (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Email Configuration (for password reset)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password 